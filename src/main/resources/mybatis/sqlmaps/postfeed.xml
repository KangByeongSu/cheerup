<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="postfeed">

	<insert id="insertFeed" parameterType="com.skplanet.project2.model.PostFeedDTO" useGeneratedKeys="true" keyProperty="id" keyColumn="c_id">
		insert into Elephant_Contents(Elephant_User_u_id,c_comment,c_imgurl,c_time) values(#{userId},#{comment},#{imgUrl},now());
	</insert>
	
	<insert id="inserthashtag" parameterType="hashmap">
        insert into Elephant_Search(Elephant_Contents_c_id, hash_tag) values
        <foreach collection="list" item="item" separator=",">
            (#{contentId}, #{item})
        </foreach>
 	</insert>
	
	
</mapper>